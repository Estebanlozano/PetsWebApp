@using PetsWebApp.Core.Entities;

@model UserProfile
<div class="container">

    @if (!string.IsNullOrEmpty(Model.Avatar))
    {
        <div class="row">
            <div class="col">
                <img class="rounded mx-auto d-block" src="@Model.Avatar" alt="" width="120" height="120" />
            </div>
        </div>
    }

    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <h2 class=" mb-2">User Profile</h2>
            @using (Html.BeginForm("CreateUserProfile", "UserProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.UserId)
                @Html.HiddenFor(x => x.Avatar)
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>
                <div class="form-group mb-4">
                    <label for="=Avatar" class="form-label">Image</label>
                    <input class="form-control" type="file" id="Avatar" name="Image" accept="image/*">
                    @Html.ValidationMessageFor(m => m.Avatar)
                </div>
                <div class="form-group mb-5">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</div>



