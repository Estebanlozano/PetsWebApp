@using PetsWebApp.Web.ViewModels;
@model PetPostViewModel
@{
    ViewData["Title"] = "DetailsPetPost";
}


<div class="row">

    <div class=" col-lg-6 offset-lg-3">

<h1 style="margin: 20px 30px 0 0; padding: 10px">@Model.Name</h1>


@using (Html.BeginForm("Edit", "PetPost", FormMethod.Post))
{
    @Html.ValidationSummary(true,"por Favor llene los campos faltantes");

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Title)
        <br />
        <input class="w-75" type="text" id="nombre" name="nombre" value="@Model.Title" readonly>
    </div>

            <div class="form-group  mb-3">
        @Html.LabelFor(m => m.PetPostDescription)
        <br />
                <input class="w-75" type="text" id="nombre" name="nombre" value="@Model.PetPostDescription" readonly>
    </div>

            <div class="form-group  mb-3">
        @Html.LabelFor(m => m.Description)
        <br />
                <input class="w-75" type="text" id="nombre" name="nombre" value="@Model.Description" readonly>
    </div>

            <div class="form-group  mb-3">
        @Html.LabelFor(m => m.Name)
        <br />
                <input class="w-75" type="text" id="nombre" name="nombre" value="@Model.Name" readonly>
    </div>

            <div class="form-group  mb-3">
        @Html.LabelFor(m => m.Age)
        <br />
                <input class="w-75" type="text" id="nombre" name="nombre" value="@Model.Age" readonly>

    </div>

    <br />
            <div class="checkbox  mb-3">
        @Html.CheckBoxFor(m => m.Castrated)
        <br />
        <input type="text" id="nombre" name="nombre" value="@Model.Castrated" readonly>
    </div>

    <br />
 
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.PetPostId)

    @Html.AntiForgeryToken()

    <br />
    <a asp-controller="PetPost" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success"> Edit</a>
    <button type="submit" class="btn btn-primary"> Apply for adoption</button>
}
</div>
</div>
